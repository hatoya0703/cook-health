<div class="left-contents">
  <div class="complex-search">
    <p>様々な条件で検索</p>
    <%= search_form_for @search, url: recipes_path do |f| %>
      <%= f.text_field :title_cont, placeholder: "レシピ名" %>
      <%= f.label :category_id_eq, "カテゴリ"%>
      <%= f.collection_select :category_id_eq, Category.all, :id, :name, include_blank: "指定なし" %>
      <br>栄養<br>
      <br>炭水化物<br>
      <%= f.collection_check_boxes :nutrients_id_eq_any, Nutrient.where(nutrient_category_id: 1 ), :id, :nutrient_name do |n| %>
        <% n.label { n.check_box + n.text } %>
      <% end %>
      <br>脂質<br>
      <%= f.collection_check_boxes :nutrients_id_eq_any, Nutrient.where(nutrient_category_id: 2 ), :id, :nutrient_name do |n| %>
        <% n.label { n.check_box + n.text } %>
      <% end %>
      <br>たんぱく質<br>
      <%= f.collection_check_boxes :nutrients_id_eq_any, Nutrient.where(nutrient_category_id: 3 ), :id, :nutrient_name do |n| %>
        <% n.label { n.check_box + n.text } %>
      <% end %>
      <br>ミネラル<br>
      <%= f.collection_check_boxes :nutrients_id_eq_any, Nutrient.where(nutrient_category_id: 4 ), :id, :nutrient_name do |n| %>
        <% n.label { n.check_box + n.text } %>
      <% end %>
      <br>ビタミン<br>
      <%= f.collection_check_boxes :nutrients_id_eq_any, Nutrient.where(nutrient_category_id: 5 ), :id, :nutrient_name do |n| %>
        <% n.label { n.check_box + n.text } %>
      <% end %>
      <%= f.label :category_id_eq, "表示順", class:"item" %>
      <%= f.select( :sorts, {"並び替え": "id desc", "投稿が新しい順": "id desc", "投稿が古い順": "id asc"} ) %>
      <%= f.submit ("検索する") %>
    <% end %>
  </div>
</div>