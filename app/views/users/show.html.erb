<%= render "shared/complex_search" %>
<div class="center-contents">
  <div class="user-contents">
    <div class="user-name">
      <h1><%= current_user.nickname %>さんのマイページ</h1>
    </div>
    <div class="user-recipe-contents">
      <ul class="tab-lists">
        <li class="my-recipes"><a href="#">マイレシピ</a></li>
        <li class="favorite-recipes"><a href="#">お気に入りレシピ</a></li>
      </ul>
      <ul class="tab-contents"> 
        <li class="my-recipes">
              <div class="posted-recipe-count">
                投稿レシピ数：<%= @my_recipe_count %>件
              </div>
          <%= render "my_recipe", my_recipes: @my_recipes %>
        </li>
        <li class="favorite-recipes">
          <%= render "favorite_recipe", favorite_recipes: @favorite_recipes %>
        </li>
      </ul>
    </div>
  </div>
</div>